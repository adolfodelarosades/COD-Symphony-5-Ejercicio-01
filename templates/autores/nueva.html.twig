{% extends 'base.html.twig' %}

{% block title %}Autor{% endblock %}

{% block body %}
  {{ include('comunes/_menu.html.twig') }}  
  <main class="container py-4">
    <h1 class="text-center">Nuevo Autor</h1>
    <form method="POST" action="{{ path('autor_create') }}">
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-sm-10">
          <input type="mombre" class="form-control" id="nombre" name="nombre">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Tipo</label>
        <div class="col-sm-10">
          <input type="tipo" class="form-control" id="tipo" name="tipo">
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-secondary">Guardar</button>
        </div>
      </div>
    </form>
  </main>
{% endblock %}