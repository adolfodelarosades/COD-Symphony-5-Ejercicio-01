{% extends 'base.html.twig' %}

{% block title %}Fondo{% endblock %}

{% block body %}
  {{ include('comunes/_menu.html.twig') }}  
  <main class="container py-4">
    <h1 class="text-center">Modificar Fondo</h1>

    <p> </p>
    <div class="text-right">
      <a class="btn btn-secondary" href="{{ path('fondos')}}" role="button">Regresar</a>
    </div>
    <p> </p>
    <form method="POST" action="{{ path('fondo_update', {id: fondo.id}) }}">
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Título</label>
        <div class="col-sm-10">
          <input type="titulo" class="form-control" id="titulo" name="fondo[titulo]" required maxlength="255" value="{{ fondo.titulo }}">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">ISBN</label>
        <div class="col-sm-10">
          <input type="isbn" class="form-control" id="isbn" name="fondo[isbn]" required maxlength="17" value="{{ fondo.isbn }}">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Autor(es)</label>
        <div class="col-sm-10">
          <select id="fondo_autores" name="fondo[autoresIds][]" multiple="multiple">
            {% for autor in autores %} 
              <option value="{{ autor.id }}" {% if autor in fondo.autores %}selected{% endif %}>{{ autor.nombre }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Editorial</label>
        <div class="col-sm-10">
          <select id="fondo_editorial" name="fondo[editorialId]">
            {% for editorial in editoriales %} 
              <option value="{{ editorial.id }}" {% if editorial == fondo.editorial %}selected{% endif %}>{{ editorial.nombre }}</option>
            {% endfor %} 
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Edición</label>
        <div class="col-sm-10">
          <input type="edicion" class="form-control" id="edicion" name="fondo[edicion]" value="{{ fondo.edicion }}">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Publicación</label>
        <div class="col-sm-10">
          <input type="publicacion" class="form-control" id="publicacion" name="fondo[publicacion]" value="{{ fondo.publicacion }}">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Categoría</label>
        <div class="col-sm-10">
          <input type="categoria" class="form-control" id="categoria" name="fondo[categoria]" value="{{ fondo.categoria }}">
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-secondary">Actualizar</button>
        </div>
      </div>
    </form>
  </main>
{% endblock %}