<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center flex-wrap">
    {% if paginaActual > 1 %}              
      <li class="page-item">
        <a class="page-link" href="{{path('fondos_paginados', {page: paginaActual - 1, orderBy: orderBy} )}}" tabindex="-1" aria-disabled="true">Anterior</a>
      </li>
    {% else %}
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
      </li>
    {% endif %}            
    {% for numPag in 1..numTotalPaginas %}
      <li class="page-item {% if numPag == paginaActual %}active{% endif %}">
        <a class="page-link" href="{{path('fondos_paginados', {page: numPag, orderBy: orderBy} )}}">{{ numPag }}</a>
      </li>
    {% endfor %}
    {% if paginaActual < numTotalPaginas %}             
      <li class="page-item">
        <a class="page-link" href="{{path('fondos_paginados', {page: paginaActual + 1, orderBy: orderBy} )}}" tabindex="-1" aria-disabled="true">Siguiente</a>
      </li>
    {% else %}
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Siguiente</a>
      </li>
    {% endif %}
  </ul>
</nav>